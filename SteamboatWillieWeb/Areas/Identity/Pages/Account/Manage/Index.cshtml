@page
@using Utility
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FName" class="form-control" placeholder="Please enter your first name." />
                <label asp-for="Input.FName" class="form-label"></label>
                <span asp-validation-for="Input.FName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LName" class="form-control" placeholder="Please enter your last name." />
                <label asp-for="Input.LName" class="form-label"></label>
                <span asp-validation-for="Input.LName" class="text-danger"></span>
            </div>
            @if (User.IsInRole(SD.CLIENT_ROLE))
            {
            <div class="form-floating mb-3">
                <input asp-for="Input.WNumber" class="form-control" placeholder="Please enter your W Number." />
                <label asp-for="Input.WNumber" class="form-label"></label>
                <span asp-validation-for="Input.WNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.MajorID" asp-items="@Model.Input.Departments" class="form-select">
                    <option disabled selected>--Select Major--</option>
                </select>
                <label asp-for="Input.MajorID" class="form-label"></label>
            </div>
                <div class="form-floating mb-3">
                    <select asp-for="Input.ClassLevel" class="form-select" placeholder="Fr. So. Jr. Sr.">
                        <option disabled selected>--Select Class Level--</option>
                        <option>Freshman</option>
                        <option>Sophomore</option>
                        <option>Junior</option>
                        <option>Senior</option>
                    </select>
                    <label asp-for="Input.ClassLevel" class="form-label"></label>
                    <span asp-validation-for="Input.ClassLevel" class="text-danger"></span>
                </div>
            }
            @if (User.IsInRole(SD.PROVIDER_ROLE))
            {
                <div class="form-floating mb-3">
                    <select asp-for="Input.Title" class="form-select" placeholder="Tutor, Teacher, Advisor">
                        <option disabled selected>--Choose your Title--</option>
                        <option>Advisor</option>
                        <option>Teacher</option>
                        <option>Tutor</option>
                    </select>
                    <label asp-for="Input.Title" class="form-label"></label>
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Input.DepartmentID" asp-items="@Model.Input.Departments" class="form-select">
                        <option disabled selected>--Select Department--</option>
                    </select>
                    <label asp-for="Input.DepartmentID" class="form-label"></label>
                </div>
            }
            <div class="form-floating mb-3">
                <input asp-for="Input.DateOfBirth" class="form-control" placeholder="@DateOnly.FromDateTime(Model.Input.DateOfBirth)" />
                <label asp-for="Input.DateOfBirth" class="form-label"></label>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." onInput="this.value = phoneFormat(this.value)"/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function phoneFormat(input) {//returns (###) ###-####
            input = input.replace(/\D/g, '');
            var size = input.length;
            if (size > 0) { input = "(" + input }
            if (size > 3) { input = input.slice(0, 4) + ") " + input.slice(4, 11) }
            if (size > 6) { input = input.slice(0, 9) + "-" + input.slice(9) }
            return input;
        }
    </script>
}

@page
@model SteamboatWillieWeb.Pages.Roles.IndexModel
@{
}
<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Role List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Roles/Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @{
                foreach (var role in Model.RolesObj)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <a class="btn btn-outline-success" asp-page="/Roles/Upsert" asp-route-id="@role.Id.ToString()">Update</a>

                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
